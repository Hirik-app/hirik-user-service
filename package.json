{
  "name": "hirik-user-service",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev --port 3000",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:generate": "dotenv -e .dev.vars -- prisma generate",
    "db:migrate": "dotenv -e .dev.vars -- prisma migrate dev",
    "db:migrate:deploy": "dotenv -e .dev.vars -- prisma migrate deploy",
    "db:studio": "dotenv -e .dev.vars -- prisma studio",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:unit": "vitest run --config tests/configs/vitest.unit.config.ts",
    "test:integration": "vitest run --config tests/configs/vitest.integration.config.ts",
    "test:e2e": "vitest run --config tests/configs/vitest.e2e.config.ts",
    "test:ui": "vitest --ui",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:benchmark": "vitest bench"
  },
  "dependencies": {
    "@prisma/adapter-d1": "^6.13.0",
    "@prisma/client": "^6.13.0",
    "@prisma/extension-accelerate": "^2.0.2",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^3.0.2",
    "hono": "^4.8.10",
    "meilisearch": "^0.51.0",
    "murmurhash": "^2.0.1",
    "prisma": "^6.13.0",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@types/node": "^24.1.0",
    "@vitest/coverage-v8": "^2.0.0",
    "@vitest/ui": "^2.1.9",
    "dotenv-cli": "^9.0.0",
    "happy-dom": "^18.0.1",
    "msw": "^2.10.5",
    "vitest": "^2.0.0",
    "wrangler": "^4.26.1"
  }
}
